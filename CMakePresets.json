{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "win-ninja-base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",

        "OpenCV_DIR": "C:/Users/mm/Documents/opencv/build",
        "OPENCV_BIN_DIR": "C:/Users/mm/Documents/opencv/build/x64/vc16/bin",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "ninja-debug",
      "inherits": "win-ninja-base",
      "displayName": "Ninja Multi-Config (Debug default)"
    },
    {
      "name": "ninja-release",
      "inherits": "win-ninja-base",
      "displayName": "Ninja Multi-Config (Release default)"
    },

    {
      "name": "vs2022-x64",
      "displayName": "Visual Studio 2022 (x64)",
